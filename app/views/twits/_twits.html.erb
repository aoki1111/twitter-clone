<ul class="media-list">

<% twits.each do |twit| %>
<li class="media">
<div class="media-left">
<img class="media-object img-rounded" src="
<%= gravatar_url(twit.user, options = { size: 50 }) %>
" alt="">
</div>
  <div class="media-body">
<div>
<%= link_to twit.user.name, user_path(twit.user) %>
<span class="text-muted">posted at
<%= twit.created_at %>
</span>

</div>

    <div>

<p>
<%= twit.content %>
</p>

   </div>

      <div>

<% if current_user == twit.user %>
<%= link_to "Delete", twit, method: :delete, data: { confirm: "You sure?" }, class: 'btn btn-danger btn-xs' %>
<% end %>

     </div>

 </div>
</li>

<% end %>

<%= paginate twits %>
</ul>
